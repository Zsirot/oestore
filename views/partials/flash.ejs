<% if (success.length) { %>
    <div class="d-flex justify-content-end align-items-end">
        <div class="success-flash alert alert-success text-center alert-dismissible fade show d-flex justify-content-center"
            role="alert">
            <strong class="text-center">
                <%=success%>
            </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"
                style="display: none;"></button>
        </div>
    </div>
    <% } %>
        <% if (error.length) { %>
            <div class="d-flex justify-content-end align-items-end">
                <div class="error-flash alert alert-danger text-center alert-dismissible fade show" role="alert">
                    <strong>
                        <%=error%>
                    </strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
            <% } %>

                <script src="/scripts/flash.js"></script>