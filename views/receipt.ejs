<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/styles/receipt.css">
    <div class="container bg-light p-4">
        <div class="row">
            <div class="col-md-6">
                <h2>Order Confirmation</h2>
                <br>
                <h6>Email: <%=customer.email%>
                </h6>
                <div>
                    <%=customer.first_name%>
                        <%=customer.last_name%>
                </div>
                <div>
                    <%=customer.address_1%>
                </div>
                <div>
                    <%=customer.address_2%>
                </div>
                <div>
                    <%=customer.city%>, <%=customer.state%>
                            <%=customer.country%>
                                <%=customer.zip%>
                </div>

            </div>
            <div class="col-md-6 my-5">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" rowspan="2">Description</th>
                            <th scope="col">Qty</th>
                            <th scope="col"></th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let [i, item] of items.entries()) { %>
                            <tr>
                                <th scope="row">
                                    <span>
                                        <img class="cart-img" src="<%=item.image%>" alt="shop-list-image">
                                    </span>
                                    <span>
                                        <span class="text-center">
                                            <%=item.title%>
                                        </span>
                                        <span>
                                            <%=item.color%>
                                        </span>
                                    </span>
                                </th>
                                <td>
                                    <%=item.qty%>
                                </td>
                                <td>
                                </td>
                                <td>$<%=item.price%>
                                </td>
                            </tr>
                            <% } %>
                                <tr>
                                    <th scope="row">
                                        <span>Subtotal</span>
                                    </th>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>$<%=prices.retailCost%>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        <span>Shipping</span>
                                    </th>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>$<%=prices.shipping%>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        <span>Total</span>
                                    </th>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>$<%=prices.total%>
                                    </td>
                                </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <form action="/store" method="GET">
            <button class="btn btn-primary my-4" type="submit">RETURN TO STORE</button>
        </form>
    </div>